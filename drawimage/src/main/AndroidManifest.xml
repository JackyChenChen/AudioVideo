<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chen.drawimage" >

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>

        <activity android:name=".camera.CameraBySurfaceActivity"></activity>

        <activity android:name=".camera.Camera2BySurfaceActivity"></activity>

        <activity android:name="com.chen.video.MediaExtractorActivity"></activity>

        <activity android:name="com.chen.opengl.camera.FirstOpenGLActivity"></activity>

    </application>


    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />


</manifest>
